@page
@model RazorFriberg.Pages.Admin.ListCarModel

@{
    Layout = "_AdminLayout";

    ViewData["Title"] = "ListCar";
}
<div class="back">
    <a asp-page="/Admin/Index" asp-route-id="@Model.Admin.Id">&larr; Tillbaka</a>
</div>
<h1>Alla Bilar</h1>

<hr />
<p class="edits createNew">
    <a asp-page="CreateCar" asp-route-id="@Model.Admin.Id"><i class="fa-solid fa-angles-right"></i> Lägg till ny bil <i class="fa-solid fa-angles-left"></i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Märke
            </th>
            <th>
                Modell
            </th>
            <th>
                Pris/Dygn
            </th>
            <th>
                Uthyrd
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Car) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerDay)kr
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsRented)
            </td>
            <td class="edits">
                    <a asp-page="./EditCar" asp-route-id="@item.Id" asp-route-adminid="@Model.Admin.Id"><i class="fa-solid fa-pencil"></i></a>|
                    <a asp-page="./DetailsCar" asp-route-id="@item.Id" asp-route-adminid="@Model.Admin.Id"><i class="fa-solid fa-circle-info"></i></a> |
                    <a asp-page="./DeleteCar" asp-route-id="@item.Id" asp-route-adminid="@Model.Admin.Id"><i class="fa-solid fa-trash-can"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
