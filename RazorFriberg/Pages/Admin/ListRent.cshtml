@page
@model RazorFriberg.Pages.Admin.ListRentModel

@{
    Layout = "_AdminLayout";

    ViewData["Title"] = "ListRent";
}

<h1>Alla uthyrningar</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Bil
            </th>
            <th>
                Kund
            </th>
            <th>
                Start Datum
            </th>
            <th>
                Slut Datum
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Rent) {
        <tr>
            <td>
                #@Html.DisplayFor(modelItem => item.Car.Id) -
                    @Html.DisplayFor(modelItem => item.Car.Brand)
                    @Html.DisplayFor(modelItem => item.Car.CarModel)
            </td>
                <td>
                    #@Html.DisplayFor(modelItem => item.Customer.Id) -
                    @Html.DisplayFor(modelItem => item.Customer.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.RenturnDate)
            </td>
            <td>
                    <a asp-page="./DeleteRent" asp-route-id="@item.Id" asp-route-adminid="@Model.Admin.Id"><i class="fa-solid fa-trash-can"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
